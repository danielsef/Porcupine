<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>401</error-code>
        <location>/unauthorized.html</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.SecurityException</exception-type>
        <location>/unauthorized.html</location>
    </error-page>
    
    <security-constraint>
        <display-name>Public Access</display-name>
        <web-resource-collection>
            <web-resource-name>Public Content</web-resource-name>
            <description>Be my guest</description>
            <url-pattern>/public/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Private Access</display-name>
        <web-resource-collection>
            <web-resource-name>Private Content</web-resource-name>
            <description>Get out of here</description>
            <url-pattern>/private/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>PeopleRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login-error.html</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <description>Administrative Priveleges</description>
        <role-name>Admin</role-name>
    </security-role>
</web-app>
